@model Everything2Everyone.Models.Comment

<h2 style="font-weight:bold">Editing your comment on: <a href="/articles/show/@ViewBag.ArticleOfComment.ArticleID">'@ViewBag.ArticleOfComment.Title'</a></h2>
<form method="POST" action="/comments/edit/@Model.CommentID" class="vw-article-add-comment">
    <input type="hidden" name="ArticleID" value="@Model.ArticleID" />

    <textarea name="Content" rows="4" id="comment_content">@Model.Content</textarea>
    @Html.ValidationMessage("Content", null, new { @class = "text-danger"})

    <div class="vw-article-add-comment-btns">
        <div class="btn-basic btn-delete" id="clear_comment">Clear</div>
        <button class="btn-basic btn-add" type="submit">Post</button>
    </div>
</form>

<script>

    const newCommentContent = document.querySelector("#comment_content");
    const clearNewComment = document.querySelector("#clear_comment");
    console.log(clearNewComment);

    clearNewComment.addEventListener("click", () => {
        newCommentContent.value = "";
    });

</script>